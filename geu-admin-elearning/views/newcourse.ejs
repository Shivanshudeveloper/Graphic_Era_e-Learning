                   <div class="card">
                       <div class="card-header" style="text-align:center">
                           <h3 class="card-title">Upload Course</h3>
                       </div>
                       <div class="card-body mt-3">
                           <form action="/courses/upload" method="POST" enctype="multipart/form-data">
                               <!-- Course Name -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Course Name :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <input type="text" class="form-control" id="coursename" placeholder="Course Name" name="coursename" pattern="^[A-Za-z -]+$" required>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Description :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <textarea class="form-control" id="coursedescription" placeholder="Course Description (min. 500 words)" name="coursedescription" pattern="^[A-Za-z -]+$" style="height:20vh" required></textarea>
                                    </div>
                                </div>

                                <!-- Program -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Program :</h5>
                                    </div>
                                    <div class="col-md-3 ml-3">
                                        <select class="form-control" name="courseprogram" id="courseprogram" required>
                                            <option value="program" selected disabled>Program</option>
                                            <option value="BBA">B.BA</option>
                                            <option value="BCOM">B.COM</option>
                                            <option value="BCA">B.CA</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Level -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Level of Course :</h5>
                                    </div>
                                    <div class="col-md-3 ml-3">
                                        <select class="form-control" name="courselevel" id="courselevel" required>
                                            <option value="level" selected disabled>Level</option>
                                            <option value="Beginner">Beginner</option>
                                            <option value="Intermediate">Intermediate</option>
                                            <option value="Advanced">Advanced</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Course Duration -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Course Duration :</h5>
                                    </div>
                                    <div class="col-md-3 ml-3">
                                        <select class="form-control" name="courseduration" id="courseduration" required>
                                            <option value="duration" selected disabled>Duration</option>
                                            <option value="3">3 months</option>
                                            <option value="6">6 months</option>
                                            <option value="12">12 months</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Price -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Price :</h5>
                                    </div>
                                    <div class="col-md-3 ml-3">
                                        <input type="text" class="form-control" id="courseprice" placeholder="in Rs." name="courseprice" pattern="^[0-9]+$" required>
                                    </div>
                                </div>

                                <!-- Video Title -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Video Title :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <input type="text" class="form-control" id="videotitle" placeholder="Title of Video" name="videotitle" pattern="^[A-Za-z -]+$" required>
                                    </div>
                                </div>

                                <!-- Introductory Video -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Introductory Video:</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <input type="file" id="coursevideo" name="coursevideo" required>
                                    </div>
                                </div>

                                <div class="mt-3 mb-3" style="text-align: center;">
                                    <button class="btn btn-md btn-primary" type="submit" name="uploadcourse" style="width:15vw">Upload Course</button>
                                </div>

