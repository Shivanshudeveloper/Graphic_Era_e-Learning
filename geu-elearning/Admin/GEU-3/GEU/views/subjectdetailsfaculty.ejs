                        </div>
                    </div>
                </nav>
                <!-- End Navbar -->
                <div class="content">
                    <div class="container-fluid">
                        <div class="card">
                            <div class="card-header" style="text-align:center">
                                <h3 class="card-title">
                                    <%= subjectname%>
                                </h3>
                            </div>
                            <div class="card-body mt-3">
                                <div class="card-body">
                                    <div class="row">
                                        <% chapterdetails.forEach(chapter => {%>
                                        <div class="col-md-4">
                                                <div class="card card-user">
                                                    <div class="card-body">
                                                        <h4 class="card-title text-center"><%= chapter.chaptertitle %></h4>
                                                        <p class="description text-center mt-4">
                                                            <%= chapter.chapterdescription %>
                                                        </p>
                                                    </div>
                                                    <hr>
                                                    <div class="button-container mr-auto ml-auto">
                                                        <a href="/faculty/videos?courseid=<%= courseid%>&subjectid=<%= chapter.subjectid%>&chapterid=<%= chapter._id%>&userid=<%= userid%>"><button class="btn btn-simple btn-link btn-icon">
                                                            <i class="fa fa-video-camera"></i>
                                                        </button></a>

                                                        <a href="/faculty/assignment?courseid=<%= courseid%>&subjectid=<%= chapter.subjectid%>&chapterid=<%= chapter._id%>&userid=<%= userid%>"><button href="#" class="btn btn-simple btn-link btn-icon">
                                                            <i class="fa fa-file-text"></i>
                                                        </button></a>
                                                    </div>
                                                </div>
                                        </div>
                                        <% }) %>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    </div>

                        <!-- Modal -->
                        <div class="modal fade" id="addchapter" role="dialog">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header justify-content-center">
                                        <h4 class="modal-title">Chapter Details</h4>
                                    </div>
                                    <form action="/faculty/addchapter" method="POST">
                                        <div class="modal-body">

                                            <!-- Course ID -->
                                            <div class="row" style="display: none;">
                                                <div class="col-md-3">
                                                    <h5 class="mt-2">Course ID :</h5>
                                                </div>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="courseid" placeholder="Course ID" name="courseid" value="<%= courseid%>">
                                                </div>
                                            </div>

                                            <!-- Subject ID -->
                                            <div class="row" style="display: none;">
                                                <div class="col-md-3">
                                                    <h5 class="mt-2">Subject ID :</h5>
                                                </div>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="subjectid" placeholder="Subject ID" name="subjectid" value="<%= subjectid%>">
                                                </div>
                                            </div>

                                            <!-- Chapter Title -->
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h5 class="mt-2">Chapter Title :</h5>
                                                </div>
                                                <div class="col-md-8">
                                                    <input type="text" class="form-control" id="chaptertitle" placeholder="Title" name="chaptertitle" pattern="^[A-Za-z -]+$" required>
                                                </div>
                                            </div>

                                            <!-- Chaper Description -->
                                            <div class="row mt-4">
                                                <div class="col-md-3">
                                                    <h5 class="mt-2">Description :</h5>
                                                </div>
                                                <div class="col-md-8">
                                                    <textarea class="form-control" id="chapterdescription" placeholder="Course Description (min. 500 words)" name="chapterdescription" pattern="^[A-Za-z -]+$" style="height:20vh" required></textarea>
                                                </div>
                                            </div>

                                            <div class="mt-3 mb-3" style="text-align: center;">
                                                
                                            </div>
                                        </div>
                                        <div class="modal-footer justify-content-center">
                                            <button class="btn btn-md btn-primary" type="submit" name="addchapter" style="width:15vw">Add Chapter</button>
                                            <button type="button" class="btn btn-md btn-default" data-dismiss="modal" style="width:15vw">Close</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                </div>
                <footer class="footer">
                    <div class="container-fluid">
                        <nav>
                            
                            <p class="copyright text-center">
                                ©
                                <script>
                                    document.write(new Date().getFullYear())
                                </script>
                                <a href="http://www.geu.ac.in">Graphic Era University</a>
                            </p>
                        </nav>
                    </div>
                </footer>
            </div>
        </div>
    </body>
    </html>
    