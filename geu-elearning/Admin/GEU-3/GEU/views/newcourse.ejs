            <div class="content">
                <div class="container-fluid">
                   <div class="card">
                       <div class="card-header" style="text-align:center">
                           <h3 class="card-title">Upload Course</h3>
                       </div>
                       <div class="card-body mt-3">
                           <form action="/admin/upload" method="POST">
                               <!-- Course Name -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Course Name :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <input type="text" class="form-control" id="coursename" placeholder="Course Name" name="coursename" pattern="^[A-Za-z -]+$" required>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="row mb-4">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Description :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <textarea class="form-control" id="coursedescription" placeholder="Course Description (min. 500 words)" name="coursedescription" pattern="^[A-Za-z -]+$" style="height:20vh" required></textarea>
                                    </div>
                                </div>

                                <!-- Level -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Level of Course :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <select class="form-control" name="courselevel" id="courselevel" required>
                                            <option value="level" selected disabled>Level</option>
                                            <option value="UG">UG</option>
                                            <option value="PG">PG</option>
                                            <option value="PHD">Ph.D</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Course Duration -->
                                <div class="row mb-4">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Course Duration :</h5>
                                    </div>
                                    <div class="col-md-4 ml-3">
                                        <input type="text" class="form-control" id="durationyear" placeholder="Year" name="durationyear" pattern="^[0-9]+$" required>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" id="durationmonth" placeholder="Month" name="durationmonth" pattern="^[0-9]+$" required>
                                    </div>
                                </div>

                                <!-- Registration Fee -->
                                <div class="row mt-4">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Registration Fee :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <input type="text" class="form-control" id="registrationfee" placeholder="in Rs." name="registrationfee" pattern="^[0-9]+$" required>
                                    </div>
                                </div>

                                <!-- Tuition Fee -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Tuition Fee :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <input type="text" class="form-control" id="tuitionfee" placeholder="in Rs." name="tuitionfee" pattern="^[0-9]+$" required>
                                    </div>
                                </div>

                                <!-- Total Fee -->
                                <div class="row">
                                    <div class="col-md-2">
                                        <h5 class="mt-2">Total Fee :</h5>
                                    </div>
                                    <div class="col-md-8 ml-3">
                                        <input type="text" class="form-control" id="totalfee" placeholder="in Rs." name="totalfee" pattern="^[0-9]+$">
                                    </div>
                                </div>

                                <div class="mt-3 mb-3" style="text-align: center;">
                                    <button class="btn btn-md btn-primary" type="submit" name="uploadcourse" style="width:15vw">Upload Course</button>
                                </div>

