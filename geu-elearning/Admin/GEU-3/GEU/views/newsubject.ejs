                       <div class="card">
                           <div class="card-header" style="text-align:center">
                               <h3 class="card-title">Add Subject</h3>
                           </div>
                           <div class="card-body mt-3">
                               <form action="/admin/subjectadd" method="POST">

                                    <!-- Course ID -->
                                    <div class="row" style="display: none;">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Course ID :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="text" class="form-control" id="courseid" placeholder="Course ID" name="courseid" value="<%= courseid%>" required>
                                        </div>
                                    </div>

                                   <!-- Subject Name -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Subject Title :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="text" class="form-control" id="subjecttitle" placeholder="Subject Title" name="subjecttitle" pattern="^[A-Za-z -]+$" required>
                                        </div>
                                    </div>
    
                                    <!-- Subject Description -->
                                    <div class="row mb-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Description :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <textarea class="form-control" id="subjectdescription" placeholder="Subject Description (min. 500 words)" name="subjectdescription" pattern="^[A-Za-z -]+$" style="height:20vh" required></textarea>
                                        </div>
                                    </div>

                                    <!-- Course Duration -->
                                    <div class="row mb-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Duration :</h5>
                                        </div>
                                        <div class="col-md-4 ml-3">
                                            <input type="text" class="form-control" id="subjectdurationhrs" placeholder="Hours" name="subjectdurationhrs" pattern="^[0-9]+$" required>
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="subjectdurationmin" placeholder="Minutes" name="subjectdurationmin" pattern="^[0-9]+$" required>
                                        </div>
                                    </div>

                                    <!-- Faculty Allocated -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Faculty ID :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="text" class="form-control" id="facultyid" placeholder="Faculty Id" name="facultyid" pattern="^[0-9]{10}+$" required>
                                        </div>
                                    </div>

                                    <!-- Course Name -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Faculty Name :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="text" class="form-control" id="facultyname" placeholder="Course Name" name="facultyname" pattern="^[A-Za-z -]+$" required>
                                        </div>
                                    </div>
    
                                    <div class="mt-3 mb-3" style="text-align: center;">
                                        <button class="btn btn-md btn-primary" type="submit" name="uploadsubject" style="width:15vw">Upload Subject</button>
                                    </div>
    
