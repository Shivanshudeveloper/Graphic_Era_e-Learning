                <div class="content">
                    <div class="container-fluid">
                       <div class="card">
                           <div class="card-header" style="text-align:center">
                               <h3 class="card-title">Faculty Details</h3>
                           </div>
                           <div class="card-body mt-3">
                               <form action="/admin/addfaculty" method="POST">
                                   <!-- Faculty Name -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Faculty Name :</h5>
                                        </div>
                                        <div class="col-md-4 ml-3">
                                            <input type="text" class="form-control" id="firstname" placeholder="First Name" name="firstname" pattern="^[A-Za-z -]+$" required>
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="lastname" placeholder="Last Name" name="lastname" pattern="^[A-Za-z -]+$" required>
                                        </div>
                                    </div>
    
                                    <!-- Faculty ID -->
                                    <div class="row mb-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Faculty ID :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="text" class="form-control" id="facultyid" placeholder="Faculty ID" name="facultyid" pattern="^[0-9]+$" required>
                                        </div>
                                    </div>

                                    <!-- Program -->
                                    <div class="row mt-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Course :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <select class="form-control" name="course" id="course" required>
                                                <option value="course" selected disabled>Course</option>
                                                <option value="Bachelor of Business Administration">B.BA</option>
                                                <option value="Bachelor of Commerce">B.COM</option>
                                                <option value="Bachelor of Computer Applications">B.CA</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Subject -->
                                    <div class="row mt-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Subject :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <select class="form-control" name="subject" id="subject" required>
                                                <option value="subject" selected disabled>Subject</option>
                                                <option value="Principles of Management">Principles of Management</option>
                                                <option value="Accountancy">Accountancy</option>
                                                <option value="System Analysis & Design">System Analysis & Design</option>
                                            </select>
                                        </div>
                                    </div>
    
                                    <!-- Email -->
                                    <div class="row mt-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Email :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="email" class="form-control" id="facultyemail" placeholder="Faculty Email" name="facultyemail" required>
                                        </div>
                                    </div>

                                    <!-- Password -->
                                    <div class="row mt-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Password :</h5>
                                        </div>
                                        <div class="col-md-4 ml-3">
                                            <input type="text" class="form-control" id="password" placeholder="Password" name="password" required>
                                        </div>

                                        <!-- Generate Password Button -->
                                        <div class="col-md-4 ml-3">
                                            <button class="btn btn-success btn-md" type="button" id="generatepassword">Generate Password</button>
                                        </div>
                                    </div>
    
                                    <div class="mt-5 mb-3" style="text-align: center;">
                                        <button class="btn btn-md btn-primary" type="submit" name="addfaculty" style="width:15vw">Create Account</button>
                                    </div>
    
                               </form>
                           </div>
                       </div>
                    </div>
                </div>
