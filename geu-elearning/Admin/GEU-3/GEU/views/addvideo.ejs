                       <div class="card">
                           <div class="card-header" style="text-align:center">
                               <h3 class="card-title">Upload Course Videos</h3>
                           </div>
                           <div class="card-body mt-3">
                               <form action="/faculty/upload" method="POST" enctype="multipart/form-data">
                                <%= chapterid%>
                                    <!-- Course Id -->
                                    <div class="row" style="display: none;">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Course ID :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="text" class="form-control" id="courseid" placeholder="Course ID" name="courseid" value="<%= courseid %>">
                                        </div>
                                    </div>


                                   <!-- Course Name -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Video Title :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="text" class="form-control" id="videotitle" placeholder="Video Title" name="videotitle" pattern="^[A-Za-z -]+$" required>
                                        </div>
                                    </div>
    
                                    <!-- Description -->
                                    <div class="row mb-4">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Description :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <textarea class="form-control" id="videodescription" placeholder="Video Description (min. 200 words)" name="videodescription" pattern="^[A-Za-z -]+$" style="height:20vh" required></textarea>
                                        </div>
                                    </div>

                                    <input type="text" name="introductory" id="introductory" value="false" style="display: none;">
    
                                    <!-- Video -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Video :</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <input type="file" id="video" name="video">
                                        </div>
                                    </div>

                                    <!-- Is Introductory Video ? -->
                                    <div class="row">
                                        <div class="col-md-2">
                                            <h5 class="mt-2">Introductory Video:</h5>
                                        </div>
                                        <div class="col-md-8 ml-3">
                                            <!-- Rounded switch -->
                                            <label class="switch">
                                                <input type="checkbox" name="introductoryvideo" id="introductoryvideo" value="false">
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </div>
    
                                    <div class="mt-3 mb-3" style="text-align: center;">
                                        <button class="btn btn-md btn-primary" type="submit" name="uploadvideo" style="width:15vw">Upload Video</button>
                                    </div>
    
                               </form>
